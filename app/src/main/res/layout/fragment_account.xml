<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Cart Items RecyclerView -->

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_full"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:layout_marginTop="11dp"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_notifications_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.613"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.213"
            app:shapeAppearance="@style/roundedImageView" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:layout_marginEnd="11dp"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_person_pin_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.431"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.236"
            app:shapeAppearance="@style/roundedImageView" />

        <!-- Header -->

        <!-- User Info Section -->

        <!-- Order History Button -->

        <!-- Address Book Button -->

        <TextView
            android:id="@+id/tvAccountHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="76dp"
            android:text="Account"
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/llUserInfo"
            android:layout_width="269dp"
            android:layout_height="79dp"
            android:background="@color/cardBorderText"
            android:orientation="vertical"
            android:padding="11dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.191">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="john.doe@example.com"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewSuccess"
            android:layout_width="87dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:color="@color/white"
            android:src="@drawable/baseline_person_pin_24"
            app:layout_constraintEnd_toStartOf="@+id/llUserInfo"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAccountHeader" />

        <TextView
            android:id="@+id/df"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="My orders"
            android:textColor="@color/primary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.036"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewSuccess" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/s"
            android:layout_width="164dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/bg_success"
            android:text="To pay"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:icon="@drawable/baseline_payments_24"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/df" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheckout"
            android:layout_width="164dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/bg_success"
            android:text="My orders"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:icon="@drawable/baseline_local_shipping_24"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.569"
            app:layout_constraintStart_toEndOf="@+id/s"
            app:layout_constraintTop_toBottomOf="@+id/df" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.896"
            tools:layout_editor_absoluteX="16dp">

            <!-- Card Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/bg_success"
                android:text="Card"
                android:textColor="@android:color/white"
                app:icon="@drawable/baseline_credit_card_24"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:cornerRadius="8dp" />

            <!-- Shipping Credits Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShippingCredits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/bg_success"
                android:text="Shipping Credits"
                android:textColor="@android:color/white"
                app:icon="@drawable/baseline_shopping_bag_24"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                app:cornerRadius="8dp"
                />

            <!-- Help Center Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHelpCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/bg_success"
                android:text="Help Center"
                android:textColor="@android:color/white"
                app:icon="@drawable/baseline_support_agent_24"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:cornerRadius="8dp" />


            <!-- Suggestions Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSuggestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/bg_success"
                android:text="Suggestions"
                android:textColor="@android:color/white"
                app:icon="@drawable/baseline_shopping_bag_24"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:cornerRadius="8dp" />

            <!-- Q&A Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnQA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/bg_success"
                android:text="Q and A"
                android:textColor="@android:color/white"
                app:icon="@drawable/baseline_question_mark_24"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:cornerRadius="8dp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
