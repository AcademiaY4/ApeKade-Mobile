<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_full"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Notification Icon -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_notifications_24"
        app:shapeAppearance="@style/roundedImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp" />

    <!-- Profile Icon -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_person_pin_24"
        app:shapeAppearance="@style/roundedImageView"
        app:layout_constraintEnd_toStartOf="@id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp" />

    <!-- Header for Order Details -->
    <TextView
        android:id="@+id/order_detail_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Details"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Order ID Row -->
    <TextView
        android:id="@+id/order_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID:"
        style="@style/NormalTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_header"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/order_id_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        app:layout_constraintStart_toEndOf="@id/order_id_label"
        app:layout_constraintTop_toBottomOf="@id/order_detail_header"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Order Quantity Row -->
    <TextView
        android:id="@+id/order_quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        style="@style/NormalTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_id_label"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/order_quantity_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        app:layout_constraintStart_toEndOf="@id/order_quantity_label"
        app:layout_constraintTop_toBottomOf="@id/order_id_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Order Price Row -->
    <TextView
        android:id="@+id/order_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        style="@style/NormalTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_quantity_label"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/order_price_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        app:layout_constraintStart_toEndOf="@id/order_price_label"
        app:layout_constraintTop_toBottomOf="@id/order_quantity_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Order Status Row -->
    <TextView
        android:id="@+id/order_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        style="@style/NormalTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_price_label"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/order_status_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        app:layout_constraintStart_toEndOf="@id/order_status_label"
        app:layout_constraintTop_toBottomOf="@id/order_price_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Order Color Row -->
    <TextView
        android:id="@+id/order_color_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color:"
        style="@style/NormalTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_status_label"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/order_color_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        app:layout_constraintStart_toEndOf="@id/order_color_label"
        app:layout_constraintTop_toBottomOf="@id/order_status_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Order Size Row -->
    <TextView
        android:id="@+id/order_size_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size:"
        style="@style/NormalTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_color_label"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/order_size_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        app:layout_constraintStart_toEndOf="@id/order_size_label"
        app:layout_constraintTop_toBottomOf="@id/order_color_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Checkout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btncancelOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="172dp"
        android:backgroundTint="@color/bg_success"
        android:text="Cancel Order"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp"
        app:icon="@drawable/baseline_close_24"
        app:iconGravity="textStart"

        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
