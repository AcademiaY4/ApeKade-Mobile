<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Product Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_product"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <!-- Order ID Label -->
        <TextView
            android:id="@+id/order_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_product"
            android:layout_marginStart="16dp"
            android:layout_alignTop="@id/image_product"
            android:text="Order ID:"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Order ID Value -->
        <TextView
            android:id="@+id/order_id_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/order_id_label"
            android:layout_marginStart="4dp"
            android:layout_alignTop="@id/image_product"
            android:text="488454656"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- Order Quantity Label -->
        <TextView
            android:id="@+id/quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_product"
            android:layout_below="@id/order_id_label"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Quantity  :"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Order Quantity Value -->

        <!-- Order Price -->

        <TextView
            android:id="@+id/order_quantity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_id_label"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/quantity_label"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/order_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/order_id_label"
            android:layout_marginEnd="16dp"
            android:text="$25.00"
            android:textColor="@color/primary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Order Status Label -->

        <!-- Order Status Value -->

        <TextView
            android:id="@+id/order_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quantity_label"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/image_product"
            android:text="Status       :"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_status_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quantity_label"
            android:layout_marginStart="6dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/order_status_label"
            android:text="Pending"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
