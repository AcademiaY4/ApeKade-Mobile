<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for normal text -->
    <style name="NormalTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="RatingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/holo_orange_light</item>
    </style>
    <style name="RoundedCornersDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <!-- Style for rounded ImageView -->
<!--    <style name="roundedImageView">-->
